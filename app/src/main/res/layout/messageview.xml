<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp"
    android:layout_marginStart="2dp"
    android:layout_marginEnd="2dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/MsgIcon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"
        android:padding="5dp"
        android:background="@color/purple_200"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/MsgTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title, New Course Added"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/Message"
            android:layout_below="@+id/MsgTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The Message descirption Description Will be shown here"
            android:textColor="@color/black"
            android:textSize="15dp">

        </TextView>
        <TextView
            android:id="@+id/msg_date"
            android:layout_below="@+id/Message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="28/03/2021 8:21 PM"
            android:layout_marginEnd="5dp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>


</LinearLayout>